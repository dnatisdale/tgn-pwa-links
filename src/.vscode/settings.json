{
  // ✅ Let Tailwind handle CSS; silence @tailwind/@apply warnings
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "postcss.validate": false,
  "css.lint.unknownAtRules": "ignore",
  "postcss.lint.unknownAtRules": "ignore",

  // ✅ Tell the Tailwind extension your config is TypeScript
  "tailwindCSS.experimental.configFile": "tailwind.config.ts",

  // ✅ Teach the Tailwind extension where classes appear
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "postcss": "css",
    "css": "css",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "javascript",
    "typescriptreact": "javascript" // <-- TSX support
  },

  // ✅ Get class name suggestions inside quotes/template strings
  "editor.quickSuggestions": {
    "strings": true
  },

  // ✅ Emmet-style tailwind expansions (e.g., type 'flex' -> suggestion)
  "tailwindCSS.emmetCompletions": true,

  // (Optional) Smarter detection when you build class strings with helpers
  // Remove lines you don’t use. Safe to keep.
  "tailwindCSS.experimental.classRegex": [
    "clsx\\(([^)]*)\\)",
    "cn\\(([^)]*)\\)",
    "cva\\(([^)]*)\\)",
    "tw`([^`]*)`"
  ],

  // (Optional) Don’t scan huge folders
  "tailwindCSS.files.exclude": ["**/.git/**", "**/node_modules/**", "**/dist/**", "**/build/**"]
}
